<label for="b">Podaj drugą liczbę:</label> <input type="number" id="b">
<br><br>
<input type="button" value="DODAWANIE" onclick="suma_Wlo()">
<input type="button" value="ODEJMOWANIE" onclick="roznica_Wlo()">
<input type="button" value="MNOŻENIE" onclick="iloczyn_Wlo()">
<input type="button" value="DZIELENIE" onclick="iloraz_Wlo()">
<input type="button" value="DZIELENIE MODULO" onclick="dzielenie_modulo_Wlo()">
<input type="button" value="Teoria Wlodarczak" onclick="teoria_Wlo()">
<div id="wynik" style="margin-top:20px;"></div>
<script>
function suma_Wlo()
{
var a = document.getElementById("a").value;
var b = document.getElementById("b").value;
if (a == "" || b == "")
{
document.getElementById("wynik").innerHTML = "Proszę uzupełnić obie liczby.";
} else
{
a = parseFloat(a);
b = parseFloat(b);
var suma = a + b;
document.getElementById("wynik").innerHTML = "Wynik działania wynosi: " + suma;
}
//alert(a);
//console.log(a);
}
function roznica_Wlo()
{
var a = document.getElementById("a").value;
var b = document.getElementById("b").value;
if (a == "" || b == "")
{
document.getElementById("wynik").innerHTML = "Proszę uzupełnić obie liczby.";
} else
{
a = parseFloat(a);
b = parseFloat(b);
var roznica = a - b;
document.getElementById("wynik").innerHTML = "Wynik działania wynosi: " + roznica;
}
}

function iloczyn_Wlo()
{
var a = document.getElementById("a").value;
var b = document.getElementById("b").value;
if (a == "" || b == "")
{
document.getElementById("wynik").innerHTML = "Proszę uzupełnić obie liczby.";
} else
{
a = parseFloat(a);
b = parseFloat(b);
var iloczyn = a * b;
document.getElementById("wynik").innerHTML = "Wynik działania wynosi: " + iloczyn;
}
}
function iloraz_Wlo()
{
var a = document.getElementById("a").value;
var b = document.getElementById("b").value;
if (a == "" || b == "")
{
document.getElementById("wynik").innerHTML = "Proszę uzupełnić obie liczby.";
} else
{
a = parseFloat(a);
b = parseFloat(b);
if (b == 0)
{
document.getElementById("wynik").innerHTML = "Nie wolno dzielić przez zero.";
}
else
{
var iloraz = a / b;
document.getElementById("wynik").innerHTML = "Wynik działania wynosi: " + iloraz;
}
}
}

function dzielenie_modulo_Wlo()
{
var a = document.getElementById("a").value;
var b = document.getElementById("b").value;
if (a == "" || b == "")
{
document.getElementById("wynik").innerHTML = "Proszę uzupełnić obie liczby.";
} else
{
a = parseFloat(a);
b = parseFloat(b);
var modulo = a%b;
document.getElementById("wynik").innerHTML = "Wynik działania wynosi: " + modulo;
}
//alert(a);
//console.log(a);
}
function teoria_Wlo()
{
document.write("<font color=green size=4>pierwsza linia teorii</font>"+"<br>");
document.write("<font color=red size=4><</font>"+"<font color=red size=4>label for=</font>"+"<font color=red size=4>"</font>");
document.write("<font color=red size=4>a</font>"+"<font color=red size=4>"</font>"+"<font color=red size=4>></font>");
document.write("<font color=red size=4>Podaj pierwszą liczbę:</font>");
document.write("<font color=red size=4><</font>"+"<font color=red size=4>/label</font>"+"<font color=red size=4>></font>");
document.write("<font color=red size=4><</font>"+"<font color=red size=4>input type=</font>"+"<font color=red size=4>"</font>");
document.write("<font color=red size=4>number</font>"+"<font color=red size=4>"</font>");
document.write("<font color=red size=4> id=</font>"+"<font color=red size=4>"</font>");
document.write("<font color=red size=4>a</font>"+"<font color=red size=4>"</font>"+"<font color=red size=4>></font>"+"<br>");
document.write("<font color=green size=4>wytłumaczenia</font>"+"<br>");
document.write("<font color=red size=4>wykonanie numerycznego pola formularza z opisem 'Podaj pierwszą liczbę:' a nazwa pola to 'a' </font>"+"<br><br>");

document.write("<font color=green size=4>Druga linia teorii</font>"+"<br>");
document.write("<font color=red size=4><</font>"+"<font color=red size=4>input type " button " value=" DODAWANIE" onclick=" suma()" ></font>"+"<br>");
document.write("<font color=green size=4>wytłumaczenia</font>"+"<br>");
document.write("<font color=red size=4>Wykonanie przycisku o nazwie DODAWANIE i z takim samym napisem, kliknięcie myszką uruchamia funkcję suma().</font>"+"<br><br>");


document.write("<font color=green size=4>Trzecia linia teorii</font>"+"<br>");
document.write("<font color=red size=4>var a = document.getElementById("a").value;</font>"+"<br>");
document.write("<font color=green size=4>wytłumaczenia</font>"+"<br>");
document.write("<font color=red size=4>wpisanie do zmiennej "a" wartości z elementu o Id "a" (zbieżność nazw)</font>"+"<br><br>");

document.write("<font color=green size=4>Czwarta linia teorii</font>"+"<br>");
document.write("<font color=red size=4>if(a==""||b=="")</font>"+"<br>");
document.write("<font color=green size=4>wytłumaczenia</font>"+"<br>");
document.write("<font color=red size=4>sprawdzenie czy pola "a" lub "b" są puste.</font>"+"<br><br>");


document.write("<font color=green size=4>Piąta linia teorii</font>"+"<br>");
document.write("<font color=red size=4>document.getElementById("wynik").innerHTML="Wynik działania wynosi: " + suma;</font>"+"<br>");
document.write("<font color=green size=4>wytłumaczenia</font>"+"<br>");
document.write("<font color=red size=4>pobranie wartości Id o nazwie "wynik" i wyprowadzenie w oknie przeglądarki tekstu "Wynik działania wynosi: " oraz wartości zmiennej suma;</font>"+"<br><br>");
}
</script>
