 <script>
 function fun_Wlo() {
 var x_Wlo = prompt("Podaj kolor", "");
 if(x_Wlo == 1 || x_Wlo.toLowerCase() == "czerwony") {
document.write('<h1 style="color:red;">wczytałeś kolor czerwony</h1><br />'); }
if(x_Wlo == 2 || x_Wlo.toLowerCase() == "niebieski") {
document.write('<h6 style="color:blue;">wczytałeś kolor niebieski</h6><br />');
}
if(x_Wlo <1 || x_Wlo >2)
document.write('<h3 style="color:green;">Nieodnaleziono koloru</h6><br />');
}
</script>
